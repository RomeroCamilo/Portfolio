@page
@model biographyModel

@{
    // Shortest Remaining Time First Scheduling

    ViewData["Title"] = "Home page";
    string school = "Senior at City University of New York, Hunter College";
    string img_path = "camiloromero.jpg";
    string award = "2021 BMCC Hackathon Best Collaboration Award";

    //setting whether we want to show the image or not dynamically.
    bool showImage1 = true;
}

<div class="text-center">
    <h1 class="display-4">Camilo Romero</h1>

    @if(showImage1){
        // if show image set to true, we will display the image.
        <img src="~/@img_path" alt="Your Image" width=230 height=250 />
    }
    else {
        <p>@Model.Message</p>
    }
     
    <p></p>
    <p>@Model.Message</p>
    <p>@school</p>
    <p>@award</p>
    <p>From New York with a passion for technology</p>
    <p>I Enjoy group work so always looking to collaborate on projects!</p>
    <p>Love exploring different technologies and how to utilize them to their best potential :)</p>
    <p>Personal interests include traveling, sports, and gaming.</p>

</div>